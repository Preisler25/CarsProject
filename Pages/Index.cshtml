@page
@model IndexModel
@{
    ViewData["Title"] = "Cars";
}

<div class="d-flex justify-content-center">
    <form method="post">
        <div>
            <label>Brand</label>
            <input asp-for="car.Brand" required />
            <span class="text-warning" asp-validation-for="car.Brand"></span>
        </div>
        <div>
            <label>Model</label>
            <input asp-for="car.Model" required />
            <span class="text-warning" asp-validation-for="car.Model"></span>
        </div>
        <div>
            <label>Year</label>
            <input asp-for="car.Year" required />
            <span class="text-warning" asp-validation-for="car.Year"></span>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Add</button>
        </div>
    </form>
</div>
<div class="text-center">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Year</th>
            </tr>
        </thead>
        <tbody>
           @foreach (var car in Model.cars)
            {
                <tr>
                    <td>@car.Brand</td>
                    <td>@car.Model</td>
                    <td>@car.Year</td>
                </tr>
            }
        </tbody>
    </table>
</div>
